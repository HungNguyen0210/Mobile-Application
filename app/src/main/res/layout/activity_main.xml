<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        android:inputType="textPersonName"/>


    <EditText
        android:id="@+id/et_yyyymm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="YYYYMM"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_yyyymm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        android:inputType="textPostalAddress"/>

    <EditText
        android:id="@+id/et_used_num_gas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Used Num Gas"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/et_gas_level_type_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Gas Level Type ID"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_used_num_gas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_gas_level_type_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_view_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check customer details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
